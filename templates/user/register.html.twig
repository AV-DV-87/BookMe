{% extends 'base.html.twig' %}
{% block title %}Inscription {% endblock %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<h1 class="text-center">Vous êtes déjà connecté</h1>
<h2><small>{{ app.user.username }}</small> Ce n'est pas vous ? <a href="{{ path('logout') }}">Se déconnecter</a></h2>
{% else %}
<h1 class="text-center">Inscrivez-vous sur notre plateforme</h1>
<p class="text-center"><small>Vous êtes déjà inscrit ? <a href="{{ path('login') }}">Connexion</a></small></p>
<form action="{{ path('login') }}" method="post" class="col-lg-5 mx-auto pt-4">
    <div class="form-group">
        <label class="mb-0" for="lastname"><small>Nom</small></label>
        <input type="lastname" class="form-control" name="_lastname" id="lastname" placeholder="Nom">
    </div>
    <div class="form-group">
        <label class="mb-0" for="name"><small>Prénom</small></label>
        <input type="name" class="form-control" name="_name" id="name" placeholder="Prénom">
    </div>
    <div class="form-group">
        <label class="mb-0" for="company"><small>Société</small></label>
        <input type="company" class="form-control" name="_company" id="company" placeholder="Société">
    </div>
    <div class="form-group">
        <label class="mb-0" for="username"><small>Adresse email</small></label>
        <input type="email" class="form-control" id="username" name="_username" placeholder="exemple@mail.fr">
    </div>
    <div class="form-group">
        <label class="mb-0" for="password"><small>Mot de passe</small></label>
        <input type="password" class="form-control" name="_password.first" id="password" placeholder="Mot de passe">
    </div>
    <div class="form-group">
        <label class="mb-0" for="password"><small>Confirmer le mot de passe</small></label>
        <input type="password" class="form-control" name="_password.second" id="password" placeholder="Mot de passe">
    </div>
    <div class="text-center pt-2">
        <input type="hidden" name="_target_path" value="/home" />
        <a href="#" class="btn btn-lg btn-danger"><i class="fa fa-user fa-lg pr-2"></i>S'inscrire</a>
    </div>
</form>
{% endif %}
{% endblock %}