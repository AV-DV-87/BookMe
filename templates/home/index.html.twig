{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{%block header %}
        <header class="business-header"> <!-- Bannière de la homepage -->
          <div class="container container-search">
            <div class="row">
              <div class="col-lg-12 px-5"> 
                <h1 class="text-left pb-4 home-title">Réservez des stands et des friteries uniques dans toute la France.</h1> <!- texte -->
                <div class="search-bar"> <!-- Barre de recherche -->
                 <form class="form-horizontal" method="post" accept-charset="utf-8">  <!-- barre de recherche Homepage -->
                    <div class="input-group recherche">
                      <i class="fas fa-search fa-2x pl-3 my-auto"></i>
                        <input type="text" autocomplete="off" value="" class="form-control border-none search-input"
                           placeholder="Que recherchez-vous?">
                        <div class="btn-container">
                            <button type="submit" class="btn-custom">Rechercher</button>
                        </div>
                    </div>
                 </form>
                </div>
             </div>
           </div>
        </div>
      </header>
 {%endblock%}
    
{% block body %}
   
    <h2 class="pt-3"> Les festivals en France </h2>
     
      <div class="row">
        <div class="col-sm-3 my-3">
          <a class="card cardlink" href="#">{#{{} }}#}
            <img class="card-img-top" {#<img class="card-img-top" src="{{ asset(product.image) }}" alt="">#}src="http://www.from-paris.com/wp-content/uploads/2017/08/th-800x450-routedurock800.jpg-e1501756007444.jpg" alt="">
            <div class="card-body pl-0">
              <p class="card-subtitle text-muted"> Saint-Malo, Bretagne</p> {#{{ /event.place }}#}      
              <h4 class="card-title">La Route Du Rock</h4> {#{{ /event.name}}#}
              <p class="card-text">La Route du Rock présente sa 28ème Collection Été du 16 au 19 août 2018 à Saint-Malo..</p>
              <p class="card-subtitle text-muted">Réservation</p>{#{{/product.price }}#} 
            </div>
           </a>
         </div>
        </div>

      
      <!-- /.row -->

{% endblock %}
